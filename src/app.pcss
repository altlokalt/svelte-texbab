@import '@fontsource/fira-mono';
@import url('https://use.typekit.net/evs7guu.css');
@import url('https://fonts.googleapis.com/css2?family=Aboreto&family=Blaka+Ink&family=Bungee+Spice&family=Eater&family=Fascinate+Inline&family=Faster+One&family=Frijole&family=Hanalei&family=Handjet:wght@100&family=Nabla&family=Oi&family=Rubik+80s+Fade&family=Rubik+Iso&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--font-Aboreto: 'Aboreto', cursive;
	--font-Blaka: 'Blaka Ink', cursive;
	--font-Bungee: 'Bungee Spice', cursive;
	--font-Eater: 'Eater', cursive;
	--font-Fascinate: 'Fascinate Inline', cursive;
	--font-Faster: 'Faster One', cursive;
	--font-Frijole: 'Frijole', cursive;
	--font-Hanalei: 'Hanalei', cursive;
	--font-Handjet: 'Handjet', cursive;
	--font-Nabla: 'Nabla', cursive;
	--font-Oi: 'Oi', cursive;
	--font-Rubik: 'Rubik 80s Fade', cursive;
	--font-Rubik-Iso: 'Rubik Iso', cursive;
	--font-brand: 'rosewood-std', sans-serif;
	--font-body: Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
		Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	--font-mono: 'Fira Mono', monospace;
	font-weight: 100;
	font-style: normal;
	font-family: var(--font-body);
}

@media (min-width: 720px) {
	h1 {
		font-size: 2.4rem;
	}
}


@layer components {
	.sidebar-icon {
		@apply relative flex items-center justify-center w-12 h-12 m-2 mb-2 mx-auto shadow-lg bg-base-100 text-base-content hover:bg-primary hover:text-primary-content rounded-3xl hover:rounded-xl transition-all duration-300 ease-linear cursor-pointer;
	}

	.sidebar-tooltip {
		@apply absolute w-auto z-10 p-2 m-2 min-w-max left-14 rounded-md shadow-md text-base-content bg-base-200 text-sm font-bold transition-all duration-100 scale-0 origin-left;
	}
}
